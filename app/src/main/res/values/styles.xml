<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Fonz" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="checkboxStyle">@style/Fonz.CheckBox</item>

        <item name="alertDialogTheme">@style/Fonz.AlertDialog</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@color/color_accent</item>
    </style>

    <style name="Fonz.Game">
        <item name="android:windowBackground">@drawable/background_game</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar_game</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">#FAFAFA</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
        <item name="android:textColorPrimaryInverse">#212121</item>
        <item name="android:textColorSecondaryInverse">#424242</item>
        <item name="colorAccent">@color/color_accent_game</item>
    </style>

    <style name="Fonz.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@color/color_accent</item>
    </style>

    <style name="Fonz.Button" parent="Widget.AppCompat.Button" />
    <style name="Fonz.Button.PowerUp" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingTop">@dimen/timer_stroke_half</item>
        <item name="android:paddingBottom">@dimen/timer_stroke_half</item>
        <item name="android:paddingStart">@dimen/timer_stroke_half</item>
        <item name="android:paddingEnd">@dimen/timer_stroke_half</item>
    </style>
    <style name="Fonz.Button.SettingsOption" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_medium</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
    <style name="Fonz.Button.Inline">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_medium</item>
        <item name="android:paddingStart">@dimen/gap_medium</item>
        <item name="android:paddingEnd">@dimen/gap_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Fonz.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" />
    <style name="Fonz.CheckBox.Reversed">
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

</resources>
